    <script>
        // Configuration
        const OPENAI_API_KEY = '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';
        const MODEL_NAME = 'gpt-4o';
        
        // DOM Elements
        const loadFileBtn = document.getElementById('loadFileBtn');
        const predictBtn = document.getElementById('predictBtn');
        const askBtn = document.getElementById('askBtn');
        const fileNameSpan = document.getElementById('fileName');
        const queryInput = document.getElementById('queryInput');
        const aiResponseDiv = document.getElementById('aiResponse');
        const predictionsTable = document.getElementById('predictionsTable').getElementsByTagName('tbody')[0];
        const priceChartCtx = document.getElementById('priceChart').getContext('2d');
        
        // State variables
        let hourlyLiveData = {};
        let predictedPrices = [];
        let priceChart = null;
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', () => {
            // Setup event listeners
            loadFileBtn.addEventListener('click', loadFile);
            predictBtn.addEventListener('click', predictPrices);
            askBtn.addEventListener('click', askAI);
            
            // Generate sample data for demonstration
            generateSampleData();
            renderTable();
        });
        
        // Generate sample hourly data for demonstration
        function generateSampleData() {
            hourlyLiveData = {};
            for (let i = 1; i < 24; i++) {
                const hour = `${i.toString().padStart(2, '0')}:00`;
                // Simulate some realistic price movements
                const basePrice = 1.17;
                const variation = Math.sin(i * 0.5) * 0.005 + (Math.random() - 0.5) * 0.002;
                hourlyLiveData[hour] = parseFloat((basePrice + variation).toFixed(4));
            }
        }
        
        // Load data file (simulated)
        function loadFile() {
            fileNameSpan.textContent = "sample_data.csv";
            showMessage("Sample data loaded successfully!", "success");
        }
        
        // Predict prices using the model
        function predictPrices() {
            if (Object.keys(hourlyLiveData).length === 0) {
                showMessage("Please load data first!", "error");
                return;
            }
            
            // Simulate prediction process
            predictedPrices = [];
            for (let i = 1; i < 24; i++) {
                const hour = `${i.toString().padStart(2, '0')}:00`;
                const livePrice = hourlyLiveData[hour] || 1.17;
                // Add some random variation to simulate prediction
                const variation = (Math.random() - 0.5) * 0.003;
                predictedPrices.push(parseFloat((livePrice + variation).toFixed(4)));
            }
            
            renderTable();
            renderChart();
            showMessage("Price predictions generated successfully!", "success");
        }
        
        // Render predictions table
        function renderTable() {
            // Clear existing rows
            predictionsTable.innerHTML = '';
            
            // Populate with data
            let hourIndex = 0;
            for (const hour in hourlyLiveData) {
                const livePrice = hourlyLiveData[hour];
                const predictedPrice = predictedPrices[hourIndex] || 0;
                const difference = (livePrice - predictedPrice).toFixed(4);
                
                const row = predictionsTable.insertRow();
                row.insertCell(0).textContent = hour;
                row.insertCell(1).textContent = livePrice.toFixed(4);
                row.insertCell(2).textContent = predictedPrice.toFixed(4);
                
                const diffCell = row.insertCell(3);
                diffCell.textContent = difference;
                diffCell.className = difference > 0 ? 'positive' : difference < 0 ? 'negative' : '';
                
                hourIndex++;
            }
        }
        
        // Render price chart
        function renderChart() {
            // Destroy previous chart if exists
            if (priceChart) {
                priceChart.destroy();
            }
            
            // Prepare data
            const hours = Object.keys(hourlyLiveData);
            const livePrices = Object.values(hourlyLiveData);
            const predictedPricesTruncated = predictedPrices.slice(0, hours.length);
            
            // Create chart
            priceChart = new Chart(priceChartCtx, {
                type: 'line',
                data: {
                    labels: hours,
                    datasets: [
                        {
                            label: 'Live Prices',
                            data: livePrices,
                            borderColor: '#3498db',
                            backgroundColor: 'rgba(52, 152, 219, 0.1)',
                            borderWidth: 2,
                            pointRadius: 3,
                            fill: false,
                            tension: 0.2
                        },
                        {
                            label: 'Predicted Prices',
                            data: predictedPricesTruncated,
                            borderColor: '#27ae60',
                            backgroundColor: 'rgba(39, 174, 96, 0.1)',
                            borderWidth: 2,
                            pointRadius: 3,
                            borderDash: [5, 5],
                            fill: false,
                            tension: 0.2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Price Predictions vs Live Data'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            title: {
                                display: true,
                                text: 'Price'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Hour'
                            }
                        }
                    }
                }
            });
        }
        
        // Ask AI assistant
        async function askAI() {
            const query = queryInput.value.trim();
            if (!query) {
                showMessage("Please enter a question for the AI assistant", "error");
                return;
            }
            
            // Show loading state
            aiResponseDiv.innerHTML = '<p class="placeholder-text">Thinking...</p>';
            
            try {
                // In a real implementation, this would call the OpenAI API
                // For this demo, we'll simulate a response
                
                // Simulate API delay
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // Generate simulated response
                const response = `Based on the data, I've analyzed the price trends and identified several key patterns:\n\n` +
                    `- The overall trend shows a slight downward movement with a gradient of -0.00028 per hour\n` +
                    `- There's a clear daily cycle with amplitude of approximately 0.0003\n` +
                    `- Volatility clustering is present with GARCH parameters Œ±=0.05, Œ≤=0.94\n` +
                    `- Jump intensity is low at Œª=0.05 with average jump size of 0.002\n\n` +
                    `Forecast for next 24 hours suggests continued sideways movement with potential for minor fluctuations.`;
                
                aiResponseDiv.innerHTML = `<p>${response.replace(/\n/g, '<br>')}</p>`;
            } catch (error) {
                console.error('AI request failed:', error);
                aiResponseDiv.innerHTML = '<p class="placeholder-text">Failed to get response from AI assistant. Please try again.</p>';
            }
        }
        
        // Show message to user
        function showMessage(message, type) {
            // In a real app, you might use a toast notification
            alert(`${type.toUpperCase()}: ${message}`);
        }
    </script>
