                    <input type="text" id="queryInput" placeholder="Ask Grok about the data...">
                    <button id="askBtn" class="btn">Ask AI Assistant</button>
                </div>
                
                <div class="ai-response" id="aiResponse">
                    <p class="placeholder-text">AI responses will appear here...</p>
                </div>
            </div>
            
            <div class="panel">
                <h2 class="panel-title">Price Predictions</h2>
                
                <table id="predictionsTable">
                    <thead>
                        <tr>
                            <th>Hour</th>
                            <th>Live Price</th>
                            <th>Predicted Price</th>
                            <th>Difference</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Table rows will be populated by JavaScript -->
                    </tbody>
                </table>
                
